<a href="/user/{{user.id}}">Setting</a>
<div>
  <button id="logout" class="btn-no-style">logout</button>
</div>

{{!--Welcome--}}

<h2>Welcome</h2>

{{#if loggedIn}}
<p> {{user.role.name}}: {{user.name}} {{user.last_name}}</p>
{{#ifCond user.role_id}}

    <h2>Patients list</h2>
<ol class="doc-list">
  {{#each patients as |patient|}}
  <li> 
    <article class="doc">
      <div class="meta">
        <a href="/patient/{{patient.id}}">{{patient.p_lname}}, {{patient.p_name}}</a>
      </div>
    </article>
  </li>
  {{/each}}
</ol>
{{else}}
    
    {{!-- patient app handled by role under Nurse --}}
<h2>Sign Up Patient</h2>
 <section>
    <form class="card">
      <div class="app-title">
        <h1>Patient Application form</h1>
      </div>
      <div class="app-form">
       <div class="text-box">
          <label for="p-name">Name</label>
          <input id="p-name"  type="text">
       </div>
      <div class="text-box">
          <label for="p-lname">Last name</label>
          <input id="p-lname" type="text">
      </div>
      <div class="text-box">
        <label for="p-email">Email</label>
        <input id="p-email" type="email">
      </div>
      <div class="text-box">
        <label for="p-dob">Date of Birth</label>
        <input id="p-dob" type="text">
      </div>
      <div class="text-box">
        <label for="p-sym">Symtoms</label>
        <input id="p-sym" type="text">
      </div>
      <div class="text-box">
        <label for="as-doc-id">Doctor's ID</label>
        <select  id="as-doc-id">
          {{#each doctors as |doctor|}}
          <option value="{{doctor.id}}">{{doctor.last_name}}, {{doctor.name}}</option>
          {{/each}}
        </select>
      </div>

    </div>
      <div class="submit-btn">
        <button id="btn">Submit</button>
      </div>
  </form>
</section> 

<script src="/javascript/profile.js"></script>
{{/ifCond}}


<script src="/javascript/logout.js"></script>






{{/if}}



