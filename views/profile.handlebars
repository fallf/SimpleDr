{{!--Welcome--}}
<h2>Welcome</h2>
<ol class="post-list">
  {{#if loggedIn}}
  <li> {{user.role.name}}: {{user.name}} {{user.last_name}}</li>
  {{/if}}
</ol>

{{!-- patient app handled by role under Nurse --}}
<h2>Sign Up Patient</h2>
 <section>
    <form class="card">
      <div class="app-title">
        <h1>Patient Application form</h1>
      </div>
      <div class="app-form">
       <div class="text-box">
          <label for="p-name">Name</label>
          <input id="p-name"  type="text">
       </div>
      <div class="text-box">
          <label for="p-lname">Last name</label>
          <input id="p-lname" type="text">
      </div>
      <div class="text-box">
        <label for="p-email">Email</label>
        <input id="p-email" type="email">
      </div>
      <div class="text-box">
        <label for="p-dob">Date of Birth</label>
        <input id="p-dob" type="text">
      </div>
      <div class="text-box">
        <label for="p-sym">Symtoms</label>
        <input id="p-sym" type="text">
      </div>
      <div class="text-box">
        <label for="as-doc-id">Doctor's ID</label>
        <input id="as-doc-id" type="text">
      </div>

    </div>
      <div class="submit-btn">
        <button id="btn">Submit</button>
      </div>
  </form>
</section> 


<h2>Doctor List:</h2>
<ol class="doc-list">
  {{#each doctors as |doctor|}}
  <li> 
    <article class="doc">
      <div class="meta">
        {{doctor.last_name}}, {{doctor.name}} ID: {{doctor.id}}
      </div>
    </article>
  </li>
  {{/each}}
</ol>





<h2>Patients list</h2>
<ol class="doc-list">
  {{#each patients as |patient|}}
  <li> 
    <article class="doc">
      <div class="meta">
        {{patient.p_lname}}, {{patient.p_name}} ID: {{patient.p_email}}
        |
        <a href="/patient/{{patient.id}}">Select Patient</a>
      </div>
    </article>
  </li>
  {{/each}}
</ol>




