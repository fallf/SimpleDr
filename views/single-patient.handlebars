{{!--Welcome--}}
<h2>Welcome</h2>
<ol class="post-list">
  {{#if loggedIn}}
  <li> {{singleUser.role.name}}: {{singleUser.name}} {{singleUser.last_name}}</li>
  {{/if}}
</ol>



{{!-- pateint list --}}
<h2>Patient</h2>
<ol class="doc-list">
  
  <li> 
    <article class="doc">
      <div class="meta">
        {{singlePatient.p_lname}}, {{singlePatient.p_name}} | email: {{singlePatient.p_email}}
      </div>

      {{!-- send patient email --}}
      <h2>Send Email to patient</h2>
      <div class="contact">
        <form id="email-form">
        <div class="full">
            <label>Message: </label>
            <textarea name="comment-body" rows="5" id="doc-comment"></textarea>
        </div>

        <div>
            <button id="update-btn">Submit</button>
        </div>
        </form>
      </div>  
    </article>
  </li>
</ol>

<script src="/javascript/single-patient.js"></script>